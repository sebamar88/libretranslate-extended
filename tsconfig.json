{
    "compilerOptions": {
        "target": "ES2022",

        "lib": ["ESNext", "DOM"],

        "module": "esnext",

        "rootDir": "./src",

        "moduleResolution": "node",

        "resolveJsonModule": true,

        "importHelpers": false,

        "declaration": true,

        "declarationMap": true,

        "sourceMap": true,

        "outDir": "./dist",

        "sourceRoot": "../src",

        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true,

        "strictPropertyInitialization": false
    },

    "include": ["./src/**/*.ts"]
}
